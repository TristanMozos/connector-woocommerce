<openerp>
    <data>
        <record id="import_order_form" model="ir.ui.view">
              <field name="name">import.order.model</field>
              <field name="model">import.order</field>
              <field name="arch" type="xml">
                  <form string="Import order">
                          <group>
                              <div>
                                 <label string="Import order by ID:" class="oe_inline"/>
                               </div>
                                 <field name="order_id"
                                      class="oe_inline"
                                      nolabel="1"/>
                        </group>
                    <footer>
                        <button name="import_order"
                            type="object"
                            class="oe_highlight"
                            string="Import in background"/>
                    </footer>
                  </form>
              </field>
        </record>

        <record id="import_order_action" model="ir.actions.act_window">
            <field name="name">Import order</field>
            <field name="res_model">import.order</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
