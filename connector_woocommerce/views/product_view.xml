<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="connector_base_product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <page name="connector" position="attributes">
                <attribute name="invisible">0</attribute>
            </page>
            <page name="connector" position="inside">
                <group string="WooCommerce Bindings">
                    <field name="woocommerce_bind_ids" nolabel="1">
                        <tree>
                            <field name="backend_id"/>
                            <field name="external_id"/>
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>

    <record id="view_woo_product_form" model="ir.ui.view">
        <field name="name">woo.product.product.form</field>
        <field name="model">woo.product.product</field>
        <field name="arch" type="xml">
            <form string="WooCommerce Product">
                <group>
                    <field name="backend_id"/>
                    <field name="external_id"/>
                </group>
                <group string="Inventory Options">
                    <field name="no_stock_sync"/>
                    <div class="oe_inline">
                        <label for="woo_qty" class="oe_inline" />
                        <field name="woo_qty" readonly="1" class="oe_inline"
                            nolabel="1"/>
                        <button name="recompute_wocommerce_qty" string="(recompute)"
                            class="oe_link oe_inline" type="object"/>
                    </div>
                </group>
            </form>
        </field>
    </record>

    <record id="view_woo_product_tree" model="ir.ui.view">
        <field name="name">woo.product.product.tree</field>
        <field name="model">woo.product.product</field>
        <field name="arch" type="xml">
            <tree string="Magento Product">
                <field name="backend_id"/>
                <field name="external_id"/>
            </tree>
        </field>
    </record>

</odoo>
